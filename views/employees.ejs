<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>DONuTsHOP</title>
  </head>
  <link rel="stylesheet" href="/style.css">
  <body>
    <div class="container">
      <header>

      </header>
      <div class="info">
        DONUTS
      </div>
      <div class="employees">
      Employees
      <% for(var i = 0; i < employees.length; i++) { %>
        <h3>First Name:</h3><%= employees[i].first_name %>
        <h3>Last Name:</h3><%= employees[i].last_name %>
        <h3>Favorite Donut:</h3><%= employees[i].favorite_donut %>
        </div>
      <div class="bottom">
      <br>
          <form action="/employees/edit/<%=employees[i].id%>" method="post">
          <input type="text" name="first_name" placeholder="<%= employees[i].first_name %>">
          <input type="text" name="last_name" placeholder="<%= employees[i].last_name %>">
          <input type="text" name="favorite_donut" placeholder="<%= employees[i].favorite_donut %>">
          <button>Update</button>
          </form><br><br>
          <a href="/shops"><button>Back to Shops</button></a>
        </div>
        </div>
          <% } %>
    </div>
    <footer></footer>
  </body>
</html>
